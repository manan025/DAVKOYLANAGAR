<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kidsT">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher Contact"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rs_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="115dp"
            android:contentDescription="IT DEPARTMENT"
            android:fontFamily="sans-serif"
            android:text="Rahul Sinha(test)"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rs_test"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="64dp"
            android:text="Teacher Name"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/Call_text"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="43dp"
            android:text="Call"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/rs_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="34dp"
            android:background="#424242"
            android:text="Call"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/arpit_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rs_call"
            android:layout_alignStart="@+id/rs_test"
            android:layout_marginStart="0dp"
            android:layout_marginTop="19dp"
            android:text="Arpit Mittal(test)"
            android:textSize="24sp" />

        <Button
            android:id="@+id/arpit_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/arpit_test"
            android:layout_alignEnd="@+id/rs_call"
            android:background="#424242"
            android:text="Call" />

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>